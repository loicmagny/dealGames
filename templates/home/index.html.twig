{% extends 'base.html.twig' %}

{% block title %}Deal Games
{% endblock %}

{% block body %}
	<main>
		<section class="container">
			<div class="row">
				<div class="col s12">
					<img class="responsive-img" src="{{asset('/uploads/img/assets/4824.jpg' | imagine_filter('banniere'))}}">
				</div>
			</div>
			<a class="waves-effect waves-teal btn-flat right">Voir tout</a>
			<h2 class="center">Annonces en vedette</h2>
			<div class="row">
				{% for advert in adverts %}
					<div class="col s4">
						<div class="card sticky-action large">
							<div class="card-image waves-effect waves-block waves-light">
								<img class="responsive-img" src="{{ asset('/uploads/img/adverts/' ~ advert.images[0].name)| imagine_filter('square') }}" alt="{{advert.title}}"/>
							</div>
							<div class="card-content">
								<span class="card-title activator grey-text text-darken-4">{{advert.title}}<i class="material-icons right">arrow_drop_up</i>
								</span>
								<p>
									<a href="advert/{{advert.id}}">Voir l'annonce</a>
								</p>
							</div>
							<div class="card-reveal">
								<span class="card-title grey-text text-darken-4">{{advert.title}}<i class="material-icons right">close</i>
								</span>
								<p>{{advert.description |striptags|u.truncate(50, '...')}}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
		<section class="container">
			<div class="carousel carousel-slider center">
				<div class="carousel-fixed-item center">
					<a class="btn waves-effect white grey-text darken-text-2">button</a>
				</div>
				<div class="carousel-item red white-text" href="#one!">
					<h2>Fiable et Sûr</h2>
					<p class="white-text">Chaque annonce est vérifiée et validée par la modération</p>
				</div>
				<div class="carousel-item amber white-text" href="#two!">
					<h2>Service Client</h2>
					<p class="white-text">Conseiller disponible 24/7</p>
				</div>
			</div>
		</section>
		<section class="container">
			<div class="row">
				<h2>Nouvelles Annonces</h2>
				{% for advert in adverts %}
					<div class="col s4">
						<div class="card sticky-action large">
							<div class="card-image waves-effect waves-block waves-light">
								<img class="responsive-img" src="{{ asset('/uploads/img/adverts/' ~ advert.images[0].name)| imagine_filter('square') }}" alt="{{advert.title}}"/>
							</div>
							<div class="card-content">
								<span class="card-title activator grey-text text-darken-4">{{advert.title}}<i class="material-icons right">arrow_drop_up</i>
								</span>
								<p>
									<a href="advert/{{advert.id}}">Voir l'annonce</a>
								</p>
							</div>
							<div class="card-reveal">
								<span class="card-title grey-text text-darken-4">{{advert.title}}<i class="material-icons right">close</i>
								</span>
								<p>{{advert.description |striptags|u.truncate(50, '...')}}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
		<section class="container">
			<h2>Commentaires</h2>
		</section>
	</main>
{% endblock %}
